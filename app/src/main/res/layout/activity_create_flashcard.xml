<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/backgroundDark"
                                                   android:id="@+id/linearLayout">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/backText"
            android:textColor="@android:color/background_light"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/frontText"/>
    <TextView
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/secondary_text_light_nodisable"
            app:layout_constraintTop_toBottomOf="@+id/backText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/backText" android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Front"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView2"
            android:textColor="@android:color/secondary_text_light_nodisable"
            app:layout_constraintTop_toBottomOf="@+id/frontText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/frontText" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/frontText"
            android:textColor="@android:color/background_light"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp" android:inputType="text"/>
    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createButton" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/backText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:background="@color/buttonYellow"/>
</androidx.constraintlayout.widget.ConstraintLayout>