<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDark"
        tools:context=".MainActivity">

    <Button
            android:text="Create"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/buttonYellow"
            android:id="@+id/buttonCreate"
            style="@style/Widget.AppCompat.Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
    />
    <Button
            android:text="Learn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/buttonYellow"
            android:id="@+id/buttonCreate2"
            style="@style/Widget.AppCompat.Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCreate"
            app:layout_constraintHorizontal_bias="0.518" app:layout_constraintVertical_bias="0.018"
            android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>